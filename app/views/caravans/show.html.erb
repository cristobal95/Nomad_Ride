<div class="container shadow mt-3 p-3 w-50">
  <div class="d-flex justify-content-center">
  <%= cl_image_tag @caravan.photo.key, height: 300, width: 400, crop: :fill %>
  </div>

  <div class="container w-50 content-center mt-2">
    <h2 class="text-center"><%= @caravan.brand %></h2>
    <p class="text-center"><%= @caravan.model %></p>
    <p><%= "Año: #{@caravan.year}" %></p>

    <p><%= "Combustible: #{@caravan.gas_type}" %></p>
    <p><%= "Capacidad: #{@caravan.capacity}" %></p>
    <p><%= "Descripción: #{@caravan.description}" %></p>
    <p><%= @caravan.address %></p>

  </div>

  <div class="container">
    <% if user_signed_in? && current_user.id == @caravan.user_id %>
      <%= link_to("Todas las Caravanas", root_path, class:"btn btn-primary") %>
      <%= link_to("Editar", edit_caravan_path) %>
      <%= link_to "Delete", caravan_path(@caravan),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>

    <% else %>
    <div class="d-flex justify-content-evenly">
      <%= link_to("Todas las Caravanas", root_path, class:"btn btn-primary") %>
      <%= link_to("Hacer una reservacion", new_caravan_reservation_path(@caravan), class:"btn btn-primary") %>
    <% end %>
  </div>
  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>



